<% if @chicken.new_record? %>
	<% @chicken.errors.messages.each do |key, value| %>
		$("#chicken_<%= key %>").effect("highlight", { color: "red" });
	<% end %>
<% else %>
	chickens_controller.hideNoChickensMsg();
	$("#new_chicken").reset();
	$("table tbody#chicken-list").append("<%= escape_javascript(render @chicken) %>");
	$("tr#<%= @chicken.id%>").effect("highlight");
	chickens_controller.enoughOfChickens();
<% end %>
