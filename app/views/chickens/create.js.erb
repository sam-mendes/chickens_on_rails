<% if @chicken.new_record? %>
	<% @chicken.errors.messages.each do |key, value| %>
		$("#chicken_<%= key %>").effect("highlight", { color: "red" });
	<% end %>
<% else %>
	$("h3").hide();
	$("#new_chicken").reset();
	$("#chickens").append("<%= escape_javascript(render @chicken) %>").effect("highlight");
<% end %>
